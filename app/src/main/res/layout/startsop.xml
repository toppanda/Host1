<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
    >


    <Button
        android:id="@+id/start"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_marginTop="120dp"
        android:layout_marginLeft="175dp"
        android:layout_marginStart="175dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>


    <EditText
        android:id="@+id/roomnum_begin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"

        android:hint="请输入目标房间号"
        android:visibility="invisible"
        android:layout_alignBottom="@+id/roomnum_stop"
        android:layout_alignLeft="@+id/start"
        android:layout_alignStart="@+id/start"
        android:layout_marginBottom="18dp"/>

    <EditText
        android:id="@+id/begin_key"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:hint="请输入主持人密钥"
        android:layout_below="@id/roomnum_begin"
        android:layout_alignLeft="@+id/start"
        android:layout_alignStart="@+id/start"
        android:layout_marginTop="20dp"
        android:visibility="invisible"

        />

    <Button
        android:id="@+id/startconfirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:visibility="invisible"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/start"
        android:layout_alignStart="@+id/start"
        android:layout_marginBottom="180dp"/>

    <Button
        android:id="@+id/stop"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_marginTop="120dp"

        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="175dp"
        android:layout_marginEnd="175dp"/>


    <EditText
        android:id="@+id/roomnum_stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="68dp"
        android:inputType="number"
        android:hint="请输入目标房间号"
        android:visibility="invisible"
        android:layout_below="@+id/start"
        android:layout_alignLeft="@+id/stop"/>

    <EditText
        android:id="@+id/stop_key"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/roomnum_stop"
        android:layout_alignLeft="@+id/stop"
        android:layout_alignStart="@+id/stop"
        android:layout_marginTop="20dp"
        android:hint="请输入主持人密钥"
        android:inputType="number"
        android:visibility="invisible"

        />

    <Button
        android:id="@+id/stopconfirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/roomnum_stop"
        android:layout_alignStart="@+id/roomnum_stop"
        android:layout_alignTop="@+id/startconfirm"
        android:layout_marginTop="0dp"
        android:visibility="invisible"
        />

</RelativeLayout>

